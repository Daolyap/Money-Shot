<Window x:Class="MoneyShot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyShot"
        mc:Ignorable="d"
        Title="Money Shot - Screenshot Tool" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="💰 Money Shot" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Modern Screenshot Tool for Windows 11+" FontSize="14" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Capture Options -->
            <Border Background="#3E3E42" CornerRadius="8" Padding="30" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Capture Options" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                    
                    <Button Name="CaptureFullScreenButton" Content="📸 Capture Full Screen" Click="CaptureFullScreen_Click" 
                            Padding="20,15" Margin="0,5" FontSize="16" Background="#0E639C" Foreground="White" BorderBrush="#1177BB" Cursor="Hand">
                        <Button.ToolTip>
                            <ToolTip Content="Capture all screens (Hotkey: Print Screen)"/>
                        </Button.ToolTip>
                    </Button>
                    
                    <Button Name="CaptureRegionButton" Content="✂️ Capture Region" Click="CaptureRegion_Click" 
                            Padding="20,15" Margin="0,5" FontSize="16" Background="#0E639C" Foreground="White" BorderBrush="#1177BB" Cursor="Hand">
                        <Button.ToolTip>
                            <ToolTip Content="Select a region to capture (Hotkey: Ctrl+Print Screen)"/>
                        </Button.ToolTip>
                    </Button>
                    
                    <!-- Individual Monitor Captures (populated dynamically) -->
                    <StackPanel Name="MonitorButtonsPanel" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Quick Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="⚙️ Settings" Click="Settings_Click" Padding="15,10" Margin="5" Background="#3E3E42" Foreground="White" BorderBrush="#555" Cursor="Hand"/>
                <Button Content="ℹ️ About" Click="About_Click" Padding="15,10" Margin="5" Background="#3E3E42" Foreground="White" BorderBrush="#555" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <TextBlock Text="Tip: Use Print Screen for full screen, Ctrl+Print Screen for region" 
                       FontSize="12" Foreground="#888888" HorizontalAlignment="Center"/>
            <TextBlock Text="The app will minimize to system tray when closed" 
                       FontSize="12" Foreground="#888888" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
