<Window x:Class="MoneyShot.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - Money Shot" Height="600" Width="700"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize">
    <Window.Resources>
        <!-- Glassmorphism Button Style -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#40FFFFFF" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#80FFFFFF" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#60FFFFFF" Opacity="0.25"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#80FFFFFF" Opacity="0.35"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Action Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0E639C" Offset="0"/>
                        <GradientStop Color="#1177BB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Glassmorphism ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Name="Border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                                <Path Grid.Column="1" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z" 
                                                      Fill="White"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#4E4E52"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,5,25,5"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Name="DropDownBorder"
                                            Background="#3E3E42"
                                            BorderThickness="1"
                                            BorderBrush="#555"
                                            CornerRadius="4"
                                            Margin="0,1,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter>
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0E639C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="12" BorderThickness="1">
        <Border.BorderBrush>
            <SolidColorBrush Color="White" Opacity="0.2"/>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.95">
                <GradientStop Color="#1a1a2e" Offset="0"/>
                <GradientStop Color="#16213e" Offset="0.5"/>
                <GradientStop Color="#0f3460" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" Opacity="0.5" BlurRadius="30"/>
        </Border.Effect>
        
        <Grid Margin="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Window Title Bar -->
            <Border Grid.Row="0" Background="#20FFFFFF" BorderBrush="#30FFFFFF" BorderThickness="0,0,0,1" 
                    CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="35">
                    <TextBlock Text="âš™ï¸ Money Shot - Settings" 
                               Foreground="White" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                        <Button Content="ðŸ—•" Click="Minimize_Click" Style="{StaticResource GlassButton}" 
                                Width="40" Height="28" Padding="0" Margin="2,0"/>
                        <Button Content="ðŸ—–" Name="MaximizeRestoreButton" Click="MaximizeRestore_Click" Style="{StaticResource GlassButton}" 
                                Width="40" Height="28" Padding="0" Margin="2,0"/>
                        <Button Content="ðŸ—™" Click="Close_Click" Style="{StaticResource GlassButton}" 
                                Width="40" Height="28" Padding="0" Margin="2,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- General Settings -->
                        <Border Background="#15FFFFFF" BorderBrush="#25FFFFFF" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="General" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                                <CheckBox Name="StartInTrayCheckbox" Content="Start in system tray (only show when user requests)" Foreground="White" Margin="0,5"/>
                                <CheckBox Name="RunOnStartupCheckbox" Content="Run on Windows startup" Foreground="White" Margin="0,5"/>
                                <CheckBox Name="MinimizeToTrayCheckbox" Content="Minimize to system tray" Foreground="White" Margin="0,5"/>
                                <CheckBox Name="DisableWindowsPrintScreenCheckbox" Content="Disable Windows built-in Print Screen capture" Foreground="White" Margin="0,5">
                                    <CheckBox.ToolTip>
                                        <ToolTip Content="Disables Windows' built-in 'Use Print Screen to open screen capture' setting"/>
                                    </CheckBox.ToolTip>
                                </CheckBox>
                            </StackPanel>
                        </Border>

                        <!-- Hotkey Settings -->
                        <Border Background="#15FFFFFF" BorderBrush="#25FFFFFF" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Hotkeys" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Full Screen Capture:" Foreground="White" Margin="0,5,0,2"/>
                                <ComboBox Name="HotKeyCaptureComboBox" Background="#3E3E42" Foreground="White" BorderBrush="#555" Padding="5">
                                    <ComboBoxItem Content="PrintScreen" Foreground="White" IsSelected="True"/>
                                    <ComboBoxItem Content="Ctrl+PrintScreen" Foreground="White"/>
                                    <ComboBoxItem Content="Alt+PrintScreen" Foreground="White"/>
                                    <ComboBoxItem Content="Shift+PrintScreen" Foreground="White"/>
                                    <ComboBoxItem Content="Ctrl+Shift+PrintScreen" Foreground="White"/>
                                    <ComboBoxItem Content="F1" Foreground="White"/>
                                    <ComboBoxItem Content="Ctrl+F1" Foreground="White"/>
                                    <ComboBoxItem Content="Alt+F1" Foreground="White"/>
                                    <ComboBoxItem Content="F5" Foreground="White"/>
                                    <ComboBoxItem Content="Ctrl+F5" Foreground="White"/>
                                </ComboBox>
                                
                                <TextBlock Text="Region Capture:" Foreground="White" Margin="0,10,0,2"/>
                                <ComboBox Name="HotKeyRegionCaptureComboBox" Background="#3E3E42" Foreground="White" BorderBrush="#555" Padding="5">
                                    <ComboBoxItem Content="PrintScreen" Foreground="White"/>
                                    <ComboBoxItem Content="Ctrl+PrintScreen" Foreground="White" IsSelected="True"/>
                                    <ComboBoxItem Content="Alt+PrintScreen" Foreground="White"/>
                                    <ComboBoxItem Content="Shift+PrintScreen" Foreground="White"/>
                                    <ComboBoxItem Content="Ctrl+Shift+PrintScreen" Foreground="White"/>
                                    <ComboBoxItem Content="F2" Foreground="White"/>
                                    <ComboBoxItem Content="Ctrl+F2" Foreground="White"/>
                                    <ComboBoxItem Content="Alt+F2" Foreground="White"/>
                                    <ComboBoxItem Content="F6" Foreground="White"/>
                                    <ComboBoxItem Content="Ctrl+F6" Foreground="White"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <!-- Save Settings -->
                        <Border Background="#15FFFFFF" BorderBrush="#25FFFFFF" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Save Settings" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Default save destination:" Foreground="White" Margin="0,5"/>
                                <RadioButton Name="SaveToClipboardRadio" Content="Clipboard only" GroupName="SaveDestination" Foreground="White" Margin="0,5"/>
                                <RadioButton Name="SaveToFileRadio" Content="File only" GroupName="SaveDestination" Foreground="White" Margin="0,5"/>
                                <RadioButton Name="SaveToBothRadio" Content="Both clipboard and file" GroupName="SaveDestination" Foreground="White" Margin="0,5"/>

                                <TextBlock Text="Default save path:" Foreground="White" Margin="0,15,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Name="SavePathTextBox" Grid.Column="0" Margin="0,0,10,0" Padding="5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                                    <Button Grid.Column="1" Content="Browse..." Click="BrowsePath_Click" Style="{StaticResource GlassButton}" Padding="10,5"/>
                                </Grid>

                                <TextBlock Text="Default file format:" Foreground="White" Margin="0,15,0,5"/>
                                <ComboBox Name="FormatComboBox" Background="#3E3E42" Foreground="White" BorderBrush="#555" Padding="5">
                                    <ComboBoxItem Content="PNG" IsSelected="True"/>
                                    <ComboBoxItem Content="JPG"/>
                                    <ComboBoxItem Content="BMP"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Save" Click="Save_Click" Style="{StaticResource PrimaryButton}" Padding="20,10" Margin="0,0,10,0"/>
                    <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource GlassButton}" Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
