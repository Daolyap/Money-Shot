<Window x:Class="MoneyShot.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Money Shot - Editor" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Tool Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                        <Button Content="â†–ï¸ Cursor" Tag="Cursor" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Cursor Tool - Select and move elements"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="âœ‚ï¸ Crop" Tag="Crop" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Crop Tool"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="âœï¸ Rectangle (R)" Tag="Rectangle" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Rectangle Tool (Shortcut: R)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="â­• Circle (C)" Tag="Circle" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Circle Tool (Shortcut: C)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="âž¡ï¸ Arrow (A)" Tag="Arrow" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Arrow Tool (Shortcut: A)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="ðŸ“ Line (L)" Tag="Line" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Line Tool (Shortcut: L)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="ðŸ”¢ Number (1)" Tag="Number" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Number Tool (Shortcut: 1)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="ðŸ“ Text (T)" Tag="Text" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Text Tool (Shortcut: T)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="â¬› Pixelate (P)" Tag="Blur" Click="ToolButton_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Pixelate Tool (Shortcut: P) - Obscure sensitive info"/>
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>

                    <!-- Color Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                        <Button Width="30" Height="30" Background="Red" Click="ColorButton_Click" Margin="2">
                            <Button.ToolTip>
                                <ToolTip Content="Red"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Width="30" Height="30" Background="Blue" Click="ColorButton_Click" Margin="2">
                            <Button.ToolTip>
                                <ToolTip Content="Blue"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Width="30" Height="30" Background="Green" Click="ColorButton_Click" Margin="2">
                            <Button.ToolTip>
                                <ToolTip Content="Green"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Width="30" Height="30" Background="Yellow" Click="ColorButton_Click" Margin="2">
                            <Button.ToolTip>
                                <ToolTip Content="Yellow"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Width="30" Height="30" Background="Orange" Click="ColorButton_Click" Margin="2">
                            <Button.ToolTip>
                                <ToolTip Content="Orange"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Width="30" Height="30" Background="Purple" Click="ColorButton_Click" Margin="2">
                            <Button.ToolTip>
                                <ToolTip Content="Purple"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Width="30" Height="30" Background="Black" Click="ColorButton_Click" Margin="2">
                            <Button.ToolTip>
                                <ToolTip Content="Black"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Width="30" Height="30" Background="White" Click="ColorButton_Click" Margin="2">
                            <Button.ToolTip>
                                <ToolTip Content="White"/>
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Orientation="Horizontal">
                        <Button Content="â†¶ Undo (Ctrl+Z)" Click="Undo_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Undo (Ctrl+Z)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="ðŸ”+ Zoom" Click="ZoomIn_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Zoom In (Ctrl++)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="ðŸ”- Zoom" Click="ZoomOut_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Zoom Out (Ctrl+-)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="ðŸ” Reset" Click="ZoomReset_Click" Margin="2" Padding="8,5" Background="#3E3E42" Foreground="White" BorderBrush="#555">
                            <Button.ToolTip>
                                <ToolTip Content="Reset Zoom (Ctrl+0)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="ðŸ’¾ Save (Ctrl+S)" Click="Save_Click" Margin="2" Padding="8,5" Background="#0E639C" Foreground="White" BorderBrush="#1177BB">
                            <Button.ToolTip>
                                <ToolTip Content="Save (Ctrl+S)"/>
                            </Button.ToolTip>
                        </Button>
                        <Button Content="ðŸ“‹ Copy (Ctrl+C)" Click="SaveToClipboard_Click" Margin="2" Padding="8,5" Background="#0E639C" Foreground="White" BorderBrush="#1177BB">
                            <Button.ToolTip>
                                <ToolTip Content="Copy to Clipboard (Ctrl+C)"/>
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>
                </WrapPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Canvas Area -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
            <Grid Name="ImageCanvas" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RenderTransform>
                    <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1" CenterX="0" CenterY="0"/>
                </Grid.RenderTransform>
                <Image Name="ImageDisplay"/>
                <Canvas Name="DrawingCanvas" 
                        MouseDown="Canvas_MouseDown"
                        MouseMove="Canvas_MouseMove"
                        MouseUp="Canvas_MouseUp"
                        Background="Transparent"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
