<Window x:Class="MoneyShot.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Money Shot - Editor" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Tool Selection -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Content="â†–ï¸ Cursor" Tag="Cursor" Click="ToolButton_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="âœï¸ Rectangle" Tag="Rectangle" Click="ToolButton_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="â­• Circle" Tag="Circle" Click="ToolButton_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="âž¡ï¸ Arrow" Tag="Arrow" Click="ToolButton_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="ðŸ“ Line" Tag="Line" Click="ToolButton_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="ðŸ”¢ Number" Tag="Number" Click="ToolButton_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="ðŸ“ Text" Tag="Text" Click="ToolButton_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="â¬› Blur" Tag="Blur" Click="ToolButton_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                </StackPanel>

                <!-- Color Selection -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Width="30" Height="30" Background="Red" Click="ColorButton_Click" Margin="3"/>
                    <Button Width="30" Height="30" Background="Blue" Click="ColorButton_Click" Margin="3"/>
                    <Button Width="30" Height="30" Background="Green" Click="ColorButton_Click" Margin="3"/>
                    <Button Width="30" Height="30" Background="Yellow" Click="ColorButton_Click" Margin="3"/>
                    <Button Width="30" Height="30" Background="Orange" Click="ColorButton_Click" Margin="3"/>
                    <Button Width="30" Height="30" Background="Purple" Click="ColorButton_Click" Margin="3"/>
                    <Button Width="30" Height="30" Background="Black" Click="ColorButton_Click" Margin="3"/>
                    <Button Width="30" Height="30" Background="White" Click="ColorButton_Click" Margin="3"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="â†¶ Undo" Click="Undo_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="ðŸ”+ Zoom In" Click="ZoomIn_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="ðŸ”- Zoom Out" Click="ZoomOut_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="ðŸ” Reset" Click="ZoomReset_Click" Margin="5,0" Padding="10,5" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                    <Button Content="ðŸ’¾ Save" Click="Save_Click" Margin="5,0" Padding="10,5" Background="#0E639C" Foreground="White" BorderBrush="#1177BB"/>
                    <Button Content="ðŸ“‹ Copy" Click="SaveToClipboard_Click" Margin="5,0" Padding="10,5" Background="#0E639C" Foreground="White" BorderBrush="#1177BB"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Canvas Area -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
            <Grid Name="ImageCanvas" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RenderTransform>
                    <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1" CenterX="0" CenterY="0"/>
                </Grid.RenderTransform>
                <Image Name="ImageDisplay"/>
                <Canvas Name="DrawingCanvas" 
                        MouseDown="Canvas_MouseDown"
                        MouseMove="Canvas_MouseMove"
                        MouseUp="Canvas_MouseUp"
                        Background="Transparent"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
